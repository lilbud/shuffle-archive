 []}, {"id": 14032, "url": "https://estreetshuffle.com/index.php/2019/11/13/cover-me-chicken-lips-and-lizard-hips/", "url_meta": {"origin": 23066, "position": 5}, "title": "Cover Me: Chicken Lips and Lizard Hips", "author": "Ken", "date": "November 13, 2019", "format": false, "excerpt": "In his earliest days of parenthood, Bruce donated a new recording for a benefit album to fight pediatric AIDS. Take a listen to Bruce's first officially released children's song, \"Chicken Lips and Lizard Hips.\"", "rel": "", "context": "In &quot;Cover Me&quot;", "block_context": {"text": "Cover Me", "link": "https://estreetshuffle.com/index.php/category/cover-me/"}, "img": {"alt_text": "", "src": "https://i0.wp.com/estreetshuffle.com/wp-content/uploads/2019/11/chicken-lips.jpg?fit=1080%2C1080&ssl=1&resize=350%2C200", "width": 350, "height": 200, "srcset": "https://i0.wp.com/estreetshuffle.com/wp-content/uploads/2019/11/chicken-lips.jpg?fit=1080%2C1080&ssl=1&resize=350%2C200 1x, https://i0.wp.com/estreetshuffle.com/wp-content/uploads/2019/11/chicken-lips.jpg?fit=1080%2C1080&ssl=1&resize=525%2C300 1.5x, https://i0.wp.com/estreetshuffle.com/wp-content/uploads/2019/11/chicken-lips.jpg?fit=1080%2C1080&ssl=1&resize=700%2C400 2x, https://i0.wp.com/estreetshuffle.com/wp-content/uploads/2019/11/chicken-lips.jpg?fit=1080%2C1080&ssl=1&resize=1050%2C600 3x"}, "classes": []}], "_links": {"self": [{"href": "https://estreetshuffle.com/index.php/wp-json/wp/v2/posts/23066", "targetHints": {"allow": ["GET"]}}], "collection": [{"href": "https://estreetshuffle.com/index.php/wp-json/wp/v2/posts"}], "about": [{"href": "https://estreetshuffle.com/index.php/wp-json/wp/v2/types/post"}], "author": [{"embeddable": true, "href": "https://estreetshuffle.com/index.php/wp-json/wp/v2/users/1"}], "replies": [{"embeddable": true, "href": "https://estreetshuffle.com/index.php/wp-json/wp/v2/comments?post=23066"}], "version-history": [{"count": 6, "href": "https://estreetshuffle.com/index.php/wp-json/wp/v2/posts/23066